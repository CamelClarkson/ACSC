set nocompatible

filetype off

syntax on

filetype plugin indent on

set modelines=0

set number

set ruler

set visualbell

set encoding=utf-8

set wrap
set textwidth=79
set tabstop=4
set shiftwidth=4
set softtabstop=4
set expandtab
set noshiftround

set scrolloff=3
set backspace=indent,eol,start

set ttyfast

set showmode
set showcmd
